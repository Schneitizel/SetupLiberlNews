    "yauzl": "^2.10.0"
  },
  "build": {
    "appId": "com.liberlnews.installer",
    "productName": "Installateur du Liberl News",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.js",
      "functions.js",
      "vdf.js",
